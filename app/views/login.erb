<div class="container">
  <h1> Login</h1>
  <%= erb :'_errors' %>
    <form action="/login" method="post">

      <label for="email">Email:</label>
      <input type="text" name="user[email]" />

      <label for="password">Password:</label>
      <input type="password" name="user[password]" />

      <input type="submit" value="Login" />
    </form>

</div>
